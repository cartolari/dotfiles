profile docked {
  output eDP-1 mode 3840x2400 position 0,0 scale 3
  output "Dell Inc. DELL P2419H 8BJYD53" mode 1920x1080 position 1280,0 enable
  output "Dell Inc. DELL P2419H 7MRYD53" mode 1920x1080 position 3200,0 enable

  exec notify-send -h int:transient:1 --icon=video-display 'Desktop Layout Updated'
}

profile undocked {
  output eDP-1 mode 3840x2400 position 0,0 scale 2.5

  exec notify-send -h int:transient:1 --icon=video-display 'Desktop Layout Updated'
}
