# Read `man 5 sway` for a complete reference.

exec libinput-gestures-setup start
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
# exec mako
exec /usr/lib/xfce4/notifyd/xfce4-notifyd
# TODO: Doesn't work anymore
exec redshift -m wayland
exec ulauncher
exec ydotoold
exec mkdir -p ~/Pictures/Screenshots
exec brillo -c 5 -S
exec blueman-applet
exec mkfifo $SWAYSOCK.wob && tail -f $SWAYSOCK.wob | wob

set $gnome-schema org.gnome.desktop.interface

exec_always {
  gsettings set $gnome-schema cursor-theme 'Vanilla-DMZ'
}
seat seat0 xcursor_theme Vanilla-DMZ 24

### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Your preferred terminal emulator
set $term alacritty

### Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
output * bg /usr/share/backgrounds/gnome/oceans.svg fill
output DP-1 resolution 1920x1080 position 0,0 scale 1 enable
output DP-2 resolution 1920x1080 position 0,0 scale 1 enable
output DP-3 resolution 1920x1080 position 0,0 scale 1 enable
output DP-4 resolution 1920x1080 position 0,0 scale 1 enable
output DP-5 resolution 1920x1080 position 1280,1080 scale 1 enable
output DP-6 resolution 1920x1080 position 3200,1080 scale 1 enable
output DP-7 resolution 1920x1080 position 1280,1080 scale 1 enable
output DP-8 resolution 1920x1080 position 3200,1080 scale 1 enable
output eDP-1 resolution 3840x2400 position 0,1080 scale 3

set $laptop eDP-1
bindswitch --reload lid:on output $laptop disable
bindswitch --reload lid:off output $laptop enable

gaps inner 10

exec swayidle -w \
         timeout 120 ~/.local/bin/lock \
         timeout 600 'swaymsg "output * power off"' \
              resume 'swaymsg "output * power on"' \
         before-sleep ~/.local/bin/lock

input type:touchpad {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

input "type:keyboard" {
    xkb_layout us,br
    xkb_variant altgr-intl,
    xkb_options ctrl:nocaps,grp:win_space_toggle
}

### Key bindings
#
# Basics:
#
    # Start a terminal
    bindsym $mod+Return exec $term
    bindsym ctrl+alt+l exec ~/.local/bin/lock

    # Kill focused window
    bindsym $mod+Shift+q kill

    # Start your launcher
    bindsym $mod+d exec ulauncher

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod normal

    # Reload the configuration file
    bindsym $mod+Shift+c reload

    # Exit sway (logs you out of your Wayland session)
    bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'
#
# Moving around:
#
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # Or use $mod+[up|down|left|right]
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # Move the focused window with the same, but add Shift
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    # Ditto, with arrow keys
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right
#
# Workspaces:
#

    # Create workspace
    bindsym $mod+c exec '~/.local/bin/sway-normalize-workspace-names && swaymsg workspace $(~/.local/bin/sway-create-workspace-index)'

    bindsym $mod+tab exec 'swaymsg focus output $(~/.local/bin/sway-next-output next)'
    bindsym $mod+shift+tab exec 'swaymsg focus output $(~/.local/bin/sway-next-output prev)'
    bindsym $mod+m exec 'swaymsg focus output $(~/.local/bin/sway-next-output next)'

    bindsym alt+tab workspace next_on_output
    bindsym alt+shift+tab workspace prev_on_output
    bindsym $mod+n workspace next_on_output
    bindsym $mod+p workspace prev_on_output

    bindsym $mod+shift+n exec '~/.local/bin/sway-normalize-workspace-names && swaymsg move container to workspace $(~/.local/bin/sway-index-on-output next) && swaymsg workspace next_on_output'
    bindsym $mod+shift+p exec '~/.local/bin/sway-normalize-workspace-names && swaymsg move container to workspace $(~/.local/bin/sway-index-on-output prev) && swaymsg workspace prev_on_output'

#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent
    bindsym $mod+Shift+minus move scratchpad

    bindsym $mod+minus scratchpad show

mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# TODO: Setup WOB with brightness adjustments
bindsym XF86MonBrightnessUp exec brillo -A 5 && echo "$(brillo -G) / 1" | bc > $SWAYSOCK.wob
bindsym XF86MonBrightnessDown exec brillo -U 5 && echo "$(brillo -G) / 1" | bc > $SWAYSOCK.wob
bindsym XF86AudioRaiseVolume exec pamixer -ui 5 && pamixer --get-volume > $SWAYSOCK.wob
bindsym XF86AudioLowerVolume exec pamixer -ud 5 && pamixer --get-volume > $SWAYSOCK.wob
bindsym XF86AudioMute exec pamixer --toggle-mute && ( pamixer --get-mute && echo 0 > $SWAYSOCK.wob ) || pamixer --get-volume > $SWAYSOCK.wob
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Print
bindsym --release Print exec ~/.local/bin/screenshot
bindsym --release Ctrl+Print exec ~/.local/bin/screenshot current-window
bindsym --release Ctrl+Shift+Print exec ~/.local/bin/screenshot area

bar {
    position top
    swaybar_command waybar
}

