ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
time-format = %Hh %Mm
type = internal/battery

[module/temperature]
exec = ~/.config/polybar/cpu_cores_temperatures.sh
