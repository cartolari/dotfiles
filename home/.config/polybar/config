[colors]
alert = #bd2c40
background = #aa000000
background-alt = #444
foreground = #eee
foreground-alt = #555
primary = #ffb52a
secondary = #e43a76

[bar/internal]
background = ${colors.background}
border-color = #00000000
border-size = 0
fixed-center = false
font-0 = Ubuntu:size=11;0
font-1 = FontAwesome:size=11;2
font-2 = Material Icons:pixelsize=11;2
foreground = ${colors.foreground}
height = 30
line-color = #f00
line-size = 3
module-margin-left = 1
module-margin-right = 2
modules-center =
modules-left = i3 xwindow
modules-right = filesystem volume xkeyboard memory cpu wlan battery temperature redshift system-updates date powermenu
monitor = ${env:MONITOR:eDP-1}
monitor-strict = false
override-redirect = false
padding-left = 0
padding-right = 2
radius = 0
scroll-down = i3wm-wsprev
scroll-up = i3wm-wsnext
separator =
width = 100%
wm-restack = i3

[bar/external]
inherit = bar/internal
monitor = ${env:MONITOR:HDMI-1}

[settings]
screenchange-reload = true

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%

[module/xkeyboard]
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
label-indicator-background = ${colors.secondary}
label-indicator-margin = 1
label-indicator-padding = 2
label-indicator-underline = ${colors.secondary}
label-layout = %layout%
type = internal/xkeyboard

[module/filesystem]
interval = 25
label-mounted =  %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}
mount-0 = /
type = internal/fs

[module/i3]
format = <label-state> <label-mode>
index-sort = true
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-padding = 2
label-focused-underline = ${colors.primary}
label-mode-background = ${colors.primary}
label-mode-foreground = #000
label-mode-padding = 2
label-unfocused = %index%
label-unfocused-padding = 2
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}
label-visible-underline = ${self.label-focused-underline}
pin-workspaces = true
type = internal/i3
wrapping-scroll = true

[module/cpu]
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
interval = 2
label = %percentage%%
type = internal/cpu

[module/memory]
format-prefix = ""
