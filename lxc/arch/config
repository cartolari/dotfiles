# Distribution configuration
lxc.include = /usr/local/var/lib/lxc/arch/common.conf
lxc.include = /usr/local/var/lib/lxc/arch/nesting.conf
lxc.arch = x86_64

lxc.cap.drop =

# Container specific configuration
lxc.rootfs.path = dir:/usr/local/var/lib/lxc/arch/rootfs
lxc.uts.name = arch

lxc.cgroup.devices.allow = a
lxc.mount.auto = proc:rw sys:rw cgroup-full:mixed:force

# Network configuration
lxc.net.0.type = veth
lxc.net.0.flags = up
lxc.net.0.link = lxcbr0
lxc.net.0.ipv4.address = 10.0.3.2/24
lxc.net.0.ipv4.gateway = 10.0.3.1

lxc.hook.start = /usr/local/lxc-scripts/setup-devices.sh

lxc.mount.entry = /home/chronos/user/Downloads/ home/cartolari/Downloads none bind,optional,create=dir
lxc.mount.entry = /run/chrome/ opt/chrome none bind,optional,create=dir 0 0
lxc.mount.entry = /home/chronos/user/.homesick/repos/chromebook-dotfiles/lxc/ usr/local/lxc-scripts none bind,optional,create=dir 0 0

lxc.mount.entry = /dev/bus/usb dev/bus/usb none bind,optional,create=dir
lxc.mount.entry = /dev/dri dev/dri none bind,optional,create=dir
lxc.mount.entry = /dev/kvm dev/kvm none bind,optional,create=file
lxc.mount.entry = /dev/net dev/net none bind,optional,create=dir
lxc.mount.entry = /dev/usb dev/usb none bind,optional,create=dir
lxc.mount.entry = /dev/vboxdrv dev/vboxdrv none bind,optional,create=file
lxc.mount.entry = /dev/video0 dev/video0 none bind,optional,create=file
