ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground}
type = internal/network

[module/date]
date = %a %b %d,
date-alt = %A, %d %B %Y
format =    <label>
format-background = #88000000
format-padding = 3
interval = 1.0
label = %date% %time%
time = %H:%M
time-alt = %H:%M:%S
type = internal/date

[module/volume]
click-left = ~/.config/polybar/pavolume.sh --togmute
click-right = exec pavucontrol
exec = ~/.config/polybar/pavolume.sh --listen
label = %output%
scroll-down = ~/.config/polybar/pavolume.sh --up
scroll-up = ~/.config/polybar/pavolume.sh --down
tail = true
type = custom/script

[module/battery]
